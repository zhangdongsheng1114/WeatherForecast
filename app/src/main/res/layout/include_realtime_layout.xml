<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_RealTime_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#7b7777"
        android:padding="10dp"
        android:text="2017-7-25 15-30:30"
        android:textColor="#fff"
        android:textSize="28sp" />

    <com.natasa.progressviews.CircleSegmentBar
        android:id="@+id/circleBar_Temp"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView_RealTime_Week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#7b7777"
        android:padding="10dp"
        android:text="星期五"
        android:textColor="#fff"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView_RealTime_Quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#7b7777"
        android:padding="10dp"
        android:text="多云|空气质量优"
        android:textColor="#fff"
        android:textSize="28sp" />
</LinearLayout>